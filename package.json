{
  "name": "next-testing",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm db:check && next dev",
    "build": "next build",
    "build:test": "dotenv -e .env.test -- next build",
    "start": "next start",
    "start:test": "dotenv -e .env.test -- next start",
    "prod": "pnpm build && pnpm start",
    "lint": "next lint",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "db:check": "tsx src/db/scripts/check.ts",
    "db:clear": "tsx src/db/scripts/clear.ts true",
    "db:seed": "tsx src/db/scripts/seed.ts",
    "db:seed-test": "dotenv -e .env.test -- tsx src/db/scripts/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:generate-test": "dotenv -e .env.test -- drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate-test": "dotenv -e .env.test -- drizzle-kit migrate",
    "db:drop": "drizzle-kit drop",
    "db:drop-test": "dotenv -e .env.test -- drizzle-kit drop",
    "db:studio": "drizzle-kit studio",
    "db:studio-test": "dotenv -e .env.test -- drizzle-kit studio",
    "db:reset-test": "pnpm db:drop-test && pnpm db:generate-test && pnpm db:migrate-test && pnpm db:seed-test",
    "db:reset-seed": "pnpm db:drop && pnpm db:clear && pnpm db:generate && pnpm db:migrate && pnpm db:seed",
    "test:cleardb": "dotenv -e .env.test -- tsx src/db/scripts/clear.ts true env=test",
    "test": "vitest"
  },
